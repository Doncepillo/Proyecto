@model Proyecto.Models.Salon

<h2>Eliminar Sala</h2>
@using (Html.BeginForm("Delete", "Salas", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.Id)
    <div class="form-group">
        <label>Sala</label>
        <p>@Model.Sala</p>
    </div>

    <div class="form-group">
        <label>Edificio</label>
        <p>@Model.Edificio</p>
    </div>


    <div>
        <input type="submit" value="Delete" />
    </div>
}