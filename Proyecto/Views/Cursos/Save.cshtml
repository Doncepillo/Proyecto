@model Proyecto.Models.Curso

<h2>Guardar</h2>
@using (Html.BeginForm("Save", "Cursos", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Id > 0)
    {
        @Html.HiddenFor(a => a.Id)
    }
    
    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(a => a.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Nombre)
    </div>
    <div class="form-group">
        <label>Docente</label>
        @Html.TextBoxFor(a => a.Docente, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Docente)
    </div>

    <div class="form-group">
        <label>Jornada</label>
        @Html.DropDownList("Jornada", new List<SelectListItem>
        {
            new SelectListItem{Text="Diurna", Value="Diurna"},
            new SelectListItem{Text="Vespertina", Value="Vespertina"},
        }, "Seleccione Jornada",
                                                                                                 new { @class = "form-control" }
                                                                                                 )
    </div>

    <div class="form-group">
        <label>Modalidad</label>
        @Html.DropDownList("Modalidad", new List<SelectListItem>
        {
            new SelectListItem{Text="Presencial", Value="Presencial"},
            new SelectListItem{Text="Semi-Presencial", Value="Semi-Presencial"},
            new SelectListItem{Text="Online", Value="Online"},
        }, "Seleccione Modalidad",
                                                                                                 new { @class = "form-control" }
                                                                                                 )
    </div>
    


    <div>
        <input type="submit" value="Save" />
    </div>
}
